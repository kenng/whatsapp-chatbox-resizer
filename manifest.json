{
    "name": "Whatsapp Textbox Resize",
    "description": "Allow you to resize fixed space textbox size easily",
    "version": "1.0",
    "manifest_version": 2,
    "icons": {
        "128": "assets/icons/128.jpg",
        "16": "assets/icons/16.png",
        "32": "assets/icons/32.png",
        "96": "assets/icons/96.png"
    },
    "content_scripts": [
        {
            "matches": ["https://web.whatsapp.com/"],
            "js": ["whatsapp-textarea-resize.js"]
        }
    ]
}
